<div class="row">
  <div class="col-sm-2">
    <% if current_user %>
      <%= link_to "Quack", new_quack_path, id: 'new_link', remote: true, class: "btn btn-success" %>
    <% else %>
      <h5>You must login in order to quack.</h5>
    <% end %>
  </div>
  <div class="col-sm-8" id="quack-list">
    <div>
      <% if @quacks.any? %>
        <% @quacks.each do |quack| %>
          <div class="panel panel-primary" id="quack_panel_<%= quack.id %>">
            <div class="panel-heading">
              <h3 class="panel-title"><%= quack.user.email %></h3>
            </div>
            <div class="panel-body">
            <%= quack.body %>
            <%= link_to("Delete", quack_path(quack),:data => {:confirm => "Are you sure?", :method => "delete"}, remote: true, class: "btn btn-xs pull-right") %>
            </div>
          </div>
        <% end %>
      <% else %>
        Get quacking!
      <% end %>
    </div>
  </div>
  <div class="col-sm-2"></div>

</div>
